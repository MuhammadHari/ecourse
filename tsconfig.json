{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "baseUrl": "views",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@components/*": ["components/*"],
      "@graphql-schema": ["graphql/schema.ts"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@queries/*": ["queries/*"],
      "@providers/*": ["providers/*"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}
